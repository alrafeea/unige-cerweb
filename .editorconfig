# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
prettier.singleQuote= true
quote_type = single
javascript.preferences.quoteStyle = singleQuote
typescript.preferences.quoteStyle = singleQuote

[*.md]
max_line_length = off
trim_trailing_whitespace = false
